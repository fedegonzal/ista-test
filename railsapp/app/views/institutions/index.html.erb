<header class="row">
    <div class="col-3">
    <img
        class="logo"
        src="https://ista.ac.at/wp-content/themes/wp-theme-ist-pubwww/assets/img/logo/ISTA_Logo_4c_rgb.svg"
    />
    </div>
    <div class="col-9">
    <h1>ISTA Programming Test - Rails version</h1>
    <p>
        Classic serverside column ordering. Bootstrap for layout. No responsive version.
    </p>
    </div>
</header>

<table id="table" class="table table-striped table-lg">
<thead>
    <tr>
        <th class="<%= @sorting[:id] %>"><a href="?col=id&dir=<%= @action[:id] %>">ID</a></th>
        <th class="<%= @sorting[:university] %>"><a href="?col=university&dir=<%= @action[:university] %>">University</a></th>
        <th class="<%= @sorting[:country] %>"><a href="?col=country&dir=<%= @action[:country] %>">Country</a></th>
        <th class="no-sort">Location</th>
    </tr>
</thead>

<tbody>
<% @institutions.each do |row| %>
    <tr>
    <td><%= row.id  %></td>
    <td><%= row.university  %></td>
    <td><%= row.country  %></td>
    <td>
        <%= link_to 'open location', "https://www.google.com/maps?q=#{row.lat},#{row.lng}", target: "_blank" %>
    </td>    
    </tr>
<% end %>
</tbody>

</table>
